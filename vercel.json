{
    "version": 2,
    "builds": [
      {
        "src": "api/index.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "10mb" }
      },
      {
        "src": "app/static/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/app/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "api/index.py"
      }
    ],
    "env": {
      "PYTHONVERSION": "3.11"
    }
  }